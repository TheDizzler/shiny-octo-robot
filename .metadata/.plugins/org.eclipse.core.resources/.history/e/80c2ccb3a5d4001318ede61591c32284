			public void onClick(View view) {
			
//				image.setImageResource(R.drawable.room_202_b2);
				
//				try {
//				Bitmap bmap = BitmapFactory.decodeFile();
//				} catch (IOException ex) {
//					throw ex;
//				}
				try {
				image.setImageDrawable(loadDataFromAsset());
				} catch (IOException ex) {
//					throw ex;
//				}
			}
		});
		
	}
	
	protected Drawable loadDataFromAsset() throws IOException {
	
		Drawable d;
		
		InputStream is = getAssets().open("images/floor_2/202_b2.jpg");
		d = Drawable.createFromStream(is, null);
		
		
		
	}
