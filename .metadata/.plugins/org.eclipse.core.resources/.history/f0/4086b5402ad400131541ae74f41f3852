//			}
//			((TextView) rootView.findViewById(R.id.trade_detail))
//				.setText(tradeItem.deficiencies.size() + "\n" + stringDef);
//		}
//		
//		return rootView;
//	}
	
	
	@Override public void onPageScrollStateChanged(
		int arg0) {
	
		// TODO Auto-generated method stub
		
	}
	
	
	@Override public void onPageScrolled(
		int arg0, float arg1, int arg2) {
	
		// TODO Auto-generated method stub
		
	}
	
	
	@Override public void onPageSelected(
		int arg0) {
	
		// TODO Auto-generated method stub
		
	}
	
}
