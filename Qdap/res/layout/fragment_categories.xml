<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="10"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vdindustries.reportsview.Categories$PlaceholderFragment" >

    <Button
        android:id="@+id/reports"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_row="0"
        android:background="@drawable/custom_button"
        android:onClick="reports"
        android:text="@string/reports" />

    <Space
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="3" />

    <Button
        android:id="@+id/notes"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:background="@drawable/custom_button"
        android:onClick="notes"
        android:text="@string/notes" />

    <Button
        android:id="@+id/photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:background="@drawable/custom_button"
        android:onClick="photo"
        android:text="@string/photo" />

    <Button
        android:id="@+id/checklists"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_row="0"
        android:background="@drawable/custom_button"
        android:onClick="checklists"
        android:text="@string/checklists" />

    <Button
        android:id="@+id/buttonFraming"
        android:layout_column="3"
        android:layout_gravity="left|center_vertical"
        android:layout_row="0"
        android:onClick="yay"
        android:text="Framing" />

    <Button
        android:id="@+id/buttonSecurity"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="Security" />

    <Button
        android:id="@+id/buttonHVAC"
        android:layout_column="3"
        android:layout_gravity="left|bottom"
        android:layout_row="3"
        android:text="HVAC" />

    <TextView
        android:id="@+id/textViewFraming"
        android:layout_column="9"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewHVAC"
        android:layout_column="9"
        android:layout_gravity="left|bottom"
        android:layout_row="3"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewSecurity"
        android:layout_column="9"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="TextView" />

</GridLayout>