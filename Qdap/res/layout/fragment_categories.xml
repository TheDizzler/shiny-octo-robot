<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vdindustries.reportsview.Categories$PlaceholderFragment" >

    <Button
        android:id="@+id/notes"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/reports"
        android:layout_below="@+id/checklists"
        android:layout_marginTop="33dp"
        android:background="@drawable/custom_button"
        android:onClick="notes"
        android:text="@string/notes" />

    <Button
        android:id="@+id/photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBaseline="@+id/notes"
        android:layout_alignBottom="@+id/notes"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/notes"
        android:background="@drawable/custom_button"
        android:onClick="photo"
        android:text="@string/photo" />

    <Button
        android:id="@+id/reports"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="67dp"
        android:layout_toRightOf="@+id/checklists"
        android:background="@drawable/custom_button"
        android:onClick="reports"
        android:text="@string/reports" />

    <Button
        android:id="@+id/checklists"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/reports"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="170dp"
        android:background="@drawable/custom_button"
        android:onClick="floors"
        android:text="@string/checklists" />

</RelativeLayout>