<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="vdindustries.qdapreport.MainActivity"
    tools:ignore="MergeRootFrame" >

    <fragment
        android:id="@+id/report_list_layout"
        android:name="vdindustries.qdapreport.ReportListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <fragment
        android:id="@+id/report_detail_layout"
        android:name="vdindustries.qdapreport.ReportDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5" />


</LinearLayout>